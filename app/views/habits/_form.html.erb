<%= simple_form_for :habit do |f| %>
  <div class="form--core">
    <%= f.input :title, label: false, placeholder: 'Drink a bottle of water' %>
    <p>What's the best time for a nudge?</p>
    <%= f.input :frequency, as: :radio_buttons, label: false, collection: [['Morning'], ['Afternoon'], ['Evening']] %>
    <%= f.input :points, as: :hidden, input_html: { value: '2' } %>
    <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
  </div>
  <%= f.button :submit  %>
<% end %>